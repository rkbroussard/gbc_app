<br />
<%= link_to "New Bulletin", '#', class: "btn btn-primary" %>
<br />
<br />
<table class="table table-bordered table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Download Link</th>
      <th>&nbsp;</th>
    </tr>
  </thead>
  <tbody>
    <% @bulletins.each do |bulletin| %>
      <tr>
        <td><%= bulletin.name %></td>
        <td><%= link_to "Download Bulletin", bulletin.attachment_url %></td>
        <td><%= button_to "Delete",  bulletin, method: :delete, class: "btn btn-danger", confirm: "Are you sure that you wish to delete #{bulletin.name}?" %></td>
      </tr>
    <% end %>
  </tbody>
</table>